<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="130dp"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="$" android:id="@+id/textView2"
                  android:textSize="35dp" android:gravity="bottom"/>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npDollars" android:minWidth="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="."
            android:id="@+id/textView"
            android:textSize="35dp" android:gravity="bottom"/>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npCents" android:minWidth="100dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="X "
                android:id="@+id/textView3" android:gravity="center_vertical" android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
        <NumberPicker android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/npQuantity" android:minWidth="100dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:paddingTop="50dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total"
                android:id="@+id/textView4" android:gravity="center"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:id="@+id/tvPopupTotal" android:paddingLeft="20dp" android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
